<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApp.Controls.ProgressRing"
             x:Name="root"
             Width="60"
             Height="60">

  <Grid>
    <Ellipse Width="{Binding Width, ElementName=root}"
             Height="{Binding Height, ElementName=root}"
             Stroke="{Binding BackgroundStroke, ElementName=root}"
             StrokeThickness="{Binding Thickness, ElementName=root}"
             Opacity="0.25"/>

    <Ellipse x:Name="PART_Ring"
             Width="{Binding Width, ElementName=root}"
             Height="{Binding Height, ElementName=root}"
             Stroke="{Binding Foreground, ElementName=root}"
             StrokeThickness="{Binding Thickness, ElementName=root}"
             StrokeDashArray="2,1.4"
             StrokeLineCap="Round"
             RenderTransformOrigin="0.5,0.5"/>
  </Grid>
</UserControl>
